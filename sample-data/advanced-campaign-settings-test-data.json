    "validation-test-cases": {
      "valid-resend-unopened": {
        "resendSettings": {
          "resendToUnopened": true,
          "dontResend": false,
          "waitTimeDays": 2
        },
        "expectedValid": true
      },
      "valid-dont-resend": {
        "resendSettings": {
          "resendToUnopened": false,
          "dontResend": true,
          "waitTimeDays": null
        },
        "expectedValid": true
      },
      "invalid-both-true": {
        "resendSettings": {
          "resendToUnopened": true,
          "dontResend": true,
          "waitTimeDays": 2
        },
        "expectedValid": false,
        "expectedError": "resendToUnopened and dontResend are mutually exclusive"
      },
      "invalid-missing-wait-time": {
        "resendSettings": {
          "resendToUnopened": true,
          "dontResend": false,
          "waitTimeDays": null
        },
        "expectedValid": false,
        "expectedError": "waitTimeDays is required when resendToUnopened is true"
      },
      "invalid-negative-wait-time": {
        "resendSettings": {
          "resendToUnopened": true,
          "dontResend": false,
          "waitTimeDays": -1
        },
        "expectedValid": false,
        "expectedError": "waitTimeDays must be a positive number"
      },
      "invalid-batch-size": {
        "batchSending": {
          "emailsPerBatch": -100,
          "intervalMinutes": 10
        },
        "expectedValid": false,
        "expectedError": "emailsPerBatch must be a positive number"
      },
      "invalid-batch-interval": {
        "batchSending": {
          "emailsPerBatch": 500,
          "intervalMinutes": 0
        },
        "expectedValid": false,
        "expectedError": "intervalMinutes must be a positive number"
      }
    },
