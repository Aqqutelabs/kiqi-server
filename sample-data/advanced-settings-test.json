{
  "testCases": [
    {
      "name": "Save Basic Advanced Settings",
      "method": "POST",
      "endpoint": "/api/v1/campaigns/:campaignId/advanced-settings",
      "query": "?action=save",
      "body": {
        "excludeLists": {
          "excludeUnsubscribed": true,
          "excludeBounced": true,
          "excludeInactive": false,
          "inactivityDays": 90
        },
        "recipientEmailAddress": "support@company.com",
        "resendSettings": {
          "enableResend": true,
          "resendToUnopened": true,
          "dontResend": false,
          "waitHours": 24
        },
        "fallbacks": {
          "useAlternativeText": true,
          "personalizationFallback": "there"
        },
        "dailySendLimit": 5000,
        "batchSending": {
          "enableBatching": true,
          "emailsPerBatch": 500,
          "intervalMinutes": 30
        },
        "emailCompliance": {
          "includeUnsubscribeLink": true,
          "showPermissionReminder": true,
          "complianceText": "You are receiving this because you subscribed to our list."
        }
      }
    },
